    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <% if params[:school_id] %>
    <%= hidden_field_tag :school_id, params[:school_id] %>
  <% else %>
    <div class="form-group">
      <%= f.label :school_id %>
      <%= f.number_field :school_id, class: "form_control"%>  
