<div class="panel panel-default">
  <div class="panel-heading">
    <h2><b><%= @course.name %></b> taught by <b><%= @course.teacher.name%></b></h2>
  </div>
  <div class="panel-body">
    <p><b>Description:</b> <%= @course.description %></p>
    <% if @course.guides %>
      <p>Nobody has made any study guides for this course yet</p>
      <%= link_to "Make a new Study Guide for #{@course.name}", new_guide_path%>
    <% else %>
      <% @course.guides.each do |guide|%>
        <div class="panel panel-default">
          <div class="panel-header">
            <%= guide.name %>
          </div>
          <div class="panel-body">
          </div>
          <div class="">
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="panel-footer">
    <% if user_signed_in? %>
      <% link_to %>
    <% end %>
    <% if user_signed_in? %>
      <% if current_user.admin? %>
        <%= link_to 'Edit', edit_course_path(@course), class: "btn btn-default" %>
      <% end %>
    <% end %>
    <%= link_to 'Back', teacher_path(@course.teacher), class: "btn btn-default" %>
  </div>
</div>