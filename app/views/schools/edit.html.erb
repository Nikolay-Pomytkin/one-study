<% if user_signed_in? %>
  <% if current_user.admin? %>
    <div class="panel panel-default">
      <div class="panel panel-heading">
        <h1>Editing school</h1>
      </div>
      <div class="panel-body">
        <%= render 'form' %>
        <%= link_to "Back", school_path(@school), class: "btn btn-default"%>
      </div>
  <% else %>
    <div class="well well-sm">
      Permission denied.
    </div>
  <% end %>
<% else %>
  <div class="well well-sm">
    Permission denied.
  </div>
<% end %>
